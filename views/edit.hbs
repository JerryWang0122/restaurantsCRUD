<h1 class="mb-1 restaurant-show-title">編輯餐廳</h1>
<div class="container">
  <form action="/restaurants/{{rest.id}}?_method=PUT" method="post">
    <div class="mb-4 row">
      <label for="name" class="col-sm-3 col-form-label">Name</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" value="{{rest.name}}" id="name" name="name" placeholder="請輸入餐廳名稱" required>
      </div>
    </div>
    <div class="mb-4 row">
      <label for="name_en" class="col-sm-3 col-form-label">English Name (Optional)</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" value="{{rest.name_en}}" id="name_en" name="name_en" placeholder="請輸入餐廳英文名稱">
      </div>
    </div>
    <div class="mb-4 row">
      <label for="category" class="col-sm-3 col-form-label">Category</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" value="{{rest.category}}" id="category" name="category" placeholder="請輸入餐廳類別">
      </div>
    </div>
    <div class="mb-4 row">
      <label for="image" class="col-sm-3 col-form-label">Image URL</label>
      <div class="col-sm-8">
        <input type="url" class="form-control" value="{{rest.image}}" id="image" name="image" placeholder="請輸入有效餐廳圖片網址">
      </div>
    </div>
    <div class="mb-4 row">
      <label for="location" class="col-sm-3 col-form-label">Location</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" value="{{rest.location}}" id="location" name="location" placeholder="請輸入餐廳地址" required>
      </div>
    </div>
    <div class="mb-4 row">
      <label for="phone" class="col-sm-3 col-form-label">Phone</label>
      <div class="col-sm-8">
        <input type="tel" class="form-control" value="{{rest.phone}}" id="phone" name="phone" placeholder="請輸入餐廳電話號碼">
      </div>
    </div>
    <div class="mb-4 row">
      <label for="google_map" class="col-sm-3 col-form-label">Google Map</label>
      <div class="col-sm-8">
        <input type="url" class="form-control" value="{{rest.google_map}}" id="google_map" name="google_map" placeholder="請輸入餐廳地址之 google map 連結" required>
      </div>
    </div>
    <div class="mb-4 row">
      <label for="rating" class="col-sm-3 col-form-label">Rating</label>
      <div class="col-sm-4">
        <input type="number" class="form-control" value="{{rest.rating}}" id="rating" name="rating" placeholder="請輸入餐廳評價（ 0.0 ~ 5.0 ）" min="0.0"
          max="5.0" step="0.1" required>
      </div>
    </div>
    <div class="mb-4 row">
      <label for="description" class="col-sm-3 col-form-label">Description (Optional)</label>
      <div class="col-sm-8">
        <textarea rows="3" class="form-control" id="description" name="description" placeholder="請輸入餐廳描述">{{rest.description}}</textarea>
      </div>
    </div>
    <div class="d-grid gap-2 col-6 mx-auto my-5">
      <button class="btn btn-primary btn-lg" type="submit">Save Restaurant</button>
    </div>
  </form>
</div>

<link rel="stylesheet" href="/stylesheets/show page.css">