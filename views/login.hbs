<div class="container">
  <h1 class="mb-1 restaurant-show-title">登入</h1>

  <form action="/login" method="post" class="d-flex flex-column row align-items-center my-1">
    <div class="col-6">
      <input type="email" name="email" id="email" placeholder="Email" class="mb-2 form-control form-control-lg" required>
    </div>
    <div class="col-6">
      <input type="password" name="password" id="password" placeholder="Password" class="mb-2 form-control form-control-lg" required>
    </div>
    <div class="d-grid gap-2 col-6 mx-auto mt-2">
      <button class="btn btn-primary btn-lg" type="submit">Login</button>
    </div>
  </form>

  <div class="d-flex justify-content-center mt-2 mb-4">
    <span class="me-3">No account?</span>
    <a href="/register">Register</a>
  </div>
  <div class="d-flex flex-column align-items-center">
    <div class="mb-4">-or-</div>
    <form action="/oauth2/login/facebook" method="get">
      <button type="submit" class="btn btn-primary ">
        <i class="fa-brands fa-facebook me-3"></i>以 Facebook 登入
      </button>
    </form>
  </div>
  
</div>
<link rel="stylesheet" href="/stylesheets/index page.css">